{
  "name": "contentworkable",
  "version": "0.1.0",
  "description": "A foundation for sane contenteditable-based editors.",
  "author": {
    "name": "Patrick Dubroy",
    "email": "pdubroy@gmail.com",
    "url": "http://dubroy.com"
  },
  "license": "MIT",
  "main": "main.js",
  "dependencies": {},
  "devDependencies": {
    "browserify": "^5.9.1",
